<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:scaleType="centerCrop"
    android:paddingBottom="30dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/chathead_twooshtext"
        android:layout_height="wrap_content"
        android:textColor="#4285F4"
        android:textSize="19dp"
        android:text="Its a Live Information Network Its a Live Information Network Its a Live Information Network"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chathead_username"
            android:text="Anonymous"
            android:textSize="9dp"
            android:textColor="#505050"
            android:layout_alignParentLeft="true"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chathead_replies"
            android:text="Replies : 0"
            android:textSize="9dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/chathead_username"
            android:textColor="#505050"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chathead_following"
            android:text="Following : 0"
            android:textSize="9dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/chathead_replies"
            android:textColor="#505050"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chathead_onlinecount"
            android:text="Online : 0"
            android:textSize="9dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/chathead_following"
            android:textColor="#ff0000"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chathead_postTime"
            android:text="00 : 00 GMT"
            android:textSize="9dp"
            android:layout_marginLeft="5dp"
            android:textColor="#c0c0c0"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>


</LinearLayout>

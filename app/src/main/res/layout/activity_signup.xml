            <!--android:inputType="textEmailAddress"-->
            <!--android:maxLines="1"-->
            <!--android:singleLine="true" />-->

    <!--</android.support.design.widget.TextInputLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/twoosh_enter_name"
        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/twooshblue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:text="Name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/et_border_gray"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:id="@+id/twoosh_user_name"
            android:hint="Enter your name..."/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/twoosh_enter_mobile"

        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/twooshblue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:text="Mobile"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/et_border_gray"
            android:textCursorDrawable="@null"
            android:padding="10dp"
            android:id="@+id/twoosh_user_mobile"
            android:hint="Enter your 10 digit mobile..."/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/twoosh_enter_pwd"

        android:padding="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/twooshblue"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="7dp"
            android:text="Choose a password..."/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/et_border_gray"

            android:padding="10dp"
            android:password="true"
            android:id="@+id/twoosh_user_password"
            android:hint="Choose a password"/>

    </LinearLayout>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_marginTop="50dp"
        android:textColor="#fff"
        android:background="#99cc00"
        android:id="@+id/Signup"/>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="10dp"

    android:id="@id/roomList">

    <!--<ImageView-->
    <!--android:id="@+id/imageView1"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_alignParentTop="true"-->


    <!--/>-->

    <!--
    android:layout_toRightOf="@+id/imageView1"
    android:layout_toRightOf="@+id/imageView1"
    -->
    <!--android:layout_toRightOf="@+id/imageView1"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:text="TagName"
            android:textSize="20sp"
            android:textColor="#2196F3"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tagonlinecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online : 0"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:textColor="#707070"
                />

            <TextView
                android:id="@+id/tagposts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posts : 0"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:textColor="#707070"
                />

            <TextView
                android:id="@+id/tagusers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users : 0"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:textSize="11sp"
                android:textColor="#707070"
                />


            <Button
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:id="@+id/jointag"
                android:layout_width="wrap_content"
                android:text="Join"
                android:padding="0dp"
                android:textSize="10sp"
                android:onClick="joinThisTag" />
            <Button
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:id="@+id/unjointag"
                android:layout_width="wrap_content"
                android:text="Unjoin"
                android:padding="0dp"
                android:textSize="10sp"
                android:onClick="joinThisTag" />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>

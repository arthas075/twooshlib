<?xml version="1.0" encoding="utf-8"?>

 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/ppl_list_item">

        <ImageView
            android:id="@+id/ppl_dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/default_user_icon"


            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/ppl_dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ppl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"
                android:text="Satyam Verma"
                android:textSize="16sp"
                android:textColor="#2196F3"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ppl_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags interests speciality"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="10dp"
                    android:textSize="11sp"
                    android:textColor="#707070"
                    />


                <TextView
                    android:id="@+id/ppl_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online : 0"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="10dp"
                    android:textSize="11sp"
                    android:textColor="#707070"
                    />



                <!--<TextView-->
                    <!--android:id="@+id/tagusers"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="Users : 0"-->
                    <!--android:layout_marginLeft="23dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:textSize="11sp"-->
                    <!--android:textColor="#707070"-->
                    <!--/>-->




            </LinearLayout>


        </LinearLayout>




    </RelativeLayout>
